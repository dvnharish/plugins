{
  "name": "devguard",
  "version": "1.0.0",
  "description": "VS Code Extension for Clean Code, Security & Testability - Created by Harish Duddupudi",
  "author": "Harish Duddupudi",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "package": "node scripts/package.js",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "demo": "cd demo-project && mvn compile",
    "test-extension": "node test-extension.js",
    "test-integration": "node test-integration.js"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "vitest": "^1.0.0",
    "@vscode/test-electron": "^2.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
